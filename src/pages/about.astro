---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import QuoteModal from '../components/QuoteModal.astro';
import OfferModal from '../components/OfferModal.astro';

const pageTitle = 'About Us | All Seasons Living | Australian Owned Home Improvements';
const pageDescription = 'Over 15 years of experience delivering quality home improvement solutions across Canberra. Australian owned and committed to local quality.';

// Organization Schema for SEO
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'All Seasons Living',
  description: pageDescription,
  url: 'https://allseasonsliving.com.au',
  telephone: '0448243979',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Canberra',
    addressRegion: 'ACT',
    addressCountry: 'AU'
  },
  foundingDate: '2010',
  slogan: 'Style You See · Comfort You Feel · Quality You Trust'
};

// Breadcrumb Schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://allseasonsliving.com.au/'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'About Us',
      item: 'https://allseasonsliving.com.au/about'
    }
  ]
};
---

<Layout title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <Header />

  <!-- Hero Section -->
  <section class="about-hero">
    <div class="container">
      <h1 class="tagline">Style You See  ·  Comfort You Feel  ·  Quality You Trust</h1>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="about-intro">
    <div class="container">
      <div class="intro-content">
        <div class="intro-header">
          <h2>Proudly Australian Owned.<br>Committed to Local Quality.</h2>
        </div>
        <div class="intro-text">
          <p>At All Seasons Living, we believe your home should be a place of comfort, security, and effortless style. With over 15 years of experience in the home improvement industry, our team has helped hundreds of Australian families transform their homes with solutions that are practical, durable, and designed to last.</p>

          <p>From roller shutters that provide security and insulation, to artificial lawns that take the hassle out of maintenance, to plantation shutters and outdoor blinds that elevate your lifestyle — we specialise in products that add real value to your home.</p>

          <p>What sets us apart isn't just our experience, but our commitment. Every project starts with listening to you — your home, your lifestyle, your vision. From there, we design and deliver tailored solutions backed by expert advice, quality workmanship, and personalised service from start to finish.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Promise Section -->
  <section class="our-promise">
    <div class="container">
      <h2 class="section-title">Our Promise is Simple</h2>

      <div class="promise-cards">
        <div class="promise-card">
          <div class="promise-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L28 16L40 18L32 26L34 38L24 32L14 38L16 26L8 18L20 16L24 4Z" stroke="currentColor" stroke-width="2.5" fill="currentColor" opacity="0.2"/>
              <circle cx="24" cy="24" r="18" stroke="currentColor" stroke-width="2" stroke-dasharray="3 3"/>
            </svg>
          </div>
          <h3>Quality you can trust</h3>
          <p>Built to suit Australian conditions.</p>
        </div>

        <div class="promise-card">
          <div class="promise-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 10C16 10 10 16 10 24C10 32 16 38 24 38C32 38 38 32 38 24C38 16 32 10 24 10Z" stroke="currentColor" stroke-width="2.5"/>
              <path d="M24 18V24L28 28" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
              <path d="M24 4V8M24 40V44M40 24H44M4 24H8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Service that cares</h3>
          <p>We're with you every step of the way.</p>
        </div>

        <div class="promise-card">
          <div class="promise-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="8" y="12" width="32" height="28" rx="2" stroke="currentColor" stroke-width="2.5"/>
              <path d="M16 12V8C16 6.89543 16.8954 6 18 6H30C31.1046 6 32 6.89543 32 8V12" stroke="currentColor" stroke-width="2.5"/>
              <path d="M8 20H40" stroke="currentColor" stroke-width="2.5"/>
              <circle cx="24" cy="28" r="3" fill="currentColor"/>
            </svg>
          </div>
          <h3>Value that lasts</h3>
          <p>Practical upgrades that improve daily living and boost property appeal.</p>
        </div>
      </div>

      <div class="promise-footer">
        <p>We're not just selling products — we're helping you create a home you love to live in, all year round.</p>
      </div>
    </div>
  </section>

  <!-- Australian Made Section -->
  <section class="australian-section">
    <div class="blob-background">
      <svg class="blob blob-1" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="rgba(255,255,255,0.15)" d="M44.7,-76.4C58.8,-69.2,71.8,-59.1,79.6,-45.8C87.4,-32.6,90,-16.3,88.5,-0.9C87,14.6,81.4,29.2,73.1,42.8C64.8,56.4,53.8,69,39.9,76.4C26,83.8,9.2,86,-7.3,86.2C-23.8,86.4,-47.6,84.6,-63.4,75.6C-79.2,66.6,-87,50.4,-89.7,33.8C-92.4,17.2,-90,0.2,-84.8,-14.9C-79.6,-30,-71.6,-43.2,-60.4,-52.4C-49.2,-61.6,-35.8,-66.8,-21.8,-73.8C-7.8,-80.8,6.8,-89.6,22.7,-91.2C38.6,-92.8,30.6,-83.6,44.7,-76.4Z" transform="translate(100 100)" />
      </svg>
      <svg class="blob blob-2" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="rgba(255,255,255,0.1)" d="M39.5,-65.9C51.1,-58.3,60.3,-47.3,67.2,-34.8C74.1,-22.3,78.7,-8.3,78.8,5.9C78.9,20.1,74.5,34.5,66.3,46.3C58.1,58.1,46.1,67.3,32.8,72.8C19.5,78.3,4.9,80.1,-9.6,78.9C-24.1,77.7,-38.5,73.5,-50.8,65.3C-63.1,57.1,-73.3,45,-78.8,31.3C-84.3,17.6,-85.1,2.3,-81.9,-11.8C-78.7,-25.9,-71.5,-38.8,-61.2,-47.8C-50.9,-56.8,-37.5,-61.9,-24.4,-68.3C-11.3,-74.7,1.5,-82.4,15.1,-84.2C28.7,-86,27.9,-73.5,39.5,-65.9Z" transform="translate(100 100)" />
      </svg>
    </div>
    <div class="container">
      <div class="australian-content">
        <img src="/assets/images/outdoor-blinds/Australian Made.png" alt="Australian Made logo" class="australian-icon" />
        <h2>Over 15 Years of Excellence</h2>
        <p>As a proudly Australian owned and operated business, we understand the unique needs of local homeowners. Our experience across hundreds of projects has refined our approach to delivering solutions that truly work for Australian homes and lifestyles.</p>
        <div class="cta-buttons">
          <button class="btn btn-primary quote-trigger">Get Your Free Quote</button>
          <a href="tel:0448243979" class="btn btn-secondary-white">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            0448 243 979
          </a>
        </div>
      </div>
    </div>
  </section>

  <QuoteModal />
  <OfferModal />
  <Footer />
</Layout>

<style>
  /* Hero Section */
  .about-hero {
    background: linear-gradient(135deg, var(--olive-green) 0%, #3d4a29 100%);
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .tagline {
    font-size: clamp(1.25rem, 3.5vw, 2.5rem);
    color: var(--white);
    font-weight: 700;
    line-height: 1.4;
    max-width: 900px;
    margin: 0 auto;
    white-space: nowrap;
  }

  /* Intro Section */
  .about-intro {
    padding: 5rem 0;
    background: #f5f1e7;
  }

  .intro-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .intro-header h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--olive-green);
    font-weight: 700;
    line-height: 1.3;
  }

  .intro-text p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--black);
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .intro-text p:last-child {
    margin-bottom: 0;
  }

  /* Our Promise Section */
  .our-promise {
    padding: 5rem 0;
    background: #e2e8d9;
  }

  .section-title {
    text-align: center;
    font-size: 2rem;
    color: var(--olive-green);
    margin-bottom: 3rem;
    font-weight: 700;
  }

  .promise-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .promise-card {
    background: var(--white);
    padding: 2rem 1.5rem;
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .promise-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .promise-icon {
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: #e2e8d9;
    border-radius: 50%;
    color: var(--olive-green);
  }

  .promise-icon svg {
    width: 48px;
    height: 48px;
  }

  .promise-card h3 {
    font-size: 1.25rem;
    color: var(--black);
    margin-bottom: 0.75rem;
    font-weight: 700;
  }

  .promise-card p {
    color: #5a5a5a;
    line-height: 1.6;
    font-size: 1rem;
  }

  .promise-footer {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 2px solid rgba(0, 0, 0, 0.1);
  }

  .promise-footer p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--black);
    font-weight: 500;
  }

  /* Australian Section */
  .australian-section {
    position: relative;
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--olive-green) 0%, #3d4a29 100%);
    overflow: hidden;
  }

  .blob-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  .blob {
    position: absolute;
    opacity: 1;
    width: 500px;
    height: 500px;
  }

  .blob-1 {
    top: -100px;
    left: -50px;
    animation: float 20s ease-in-out infinite;
  }

  .blob-2 {
    bottom: -100px;
    right: -50px;
    animation: float 25s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      transform: translate(30px, -30px) rotate(120deg) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) rotate(240deg) scale(0.9);
    }
  }

  .australian-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    color: var(--white);
  }

  .australian-icon {
    width: 150px;
    height: auto;
    margin: 0 auto 1.5rem;
    display: block;
  }

  .australian-content h2 {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    color: var(--white);
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .australian-content p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-secondary-white {
    background: transparent;
    color: var(--white);
    border: 2px solid var(--white);
    padding: 0.875rem 2rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .btn-secondary-white:hover {
    background: var(--white);
    color: var(--olive-green);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .promise-cards {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .about-hero {
      padding: 4rem 0 3rem;
    }

    .about-intro,
    .our-promise,
    .australian-section {
      padding: 3rem 0;
    }

    .intro-text p {
      font-size: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
