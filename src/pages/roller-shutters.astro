---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import QuoteModal from '../components/QuoteModal.astro';
import OfferModal from '../components/OfferModal.astro';

const pageTitle = 'Premium Roller Shutters Canberra | Australian Made | All Seasons Living';
const pageDescription = 'Insulated aluminium roller shutters in Canberra. Australian made & owned. Enhance security, control temperature, and block UV rays. Free measure & quote.';

// Product Schema for SEO
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: 'Insulated Aluminium Roller Shutters',
  description: pageDescription,
  brand: {
    '@type': 'Brand',
    name: 'All Seasons Living'
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    reviewCount: '50000',
    bestRating: '5'
  },
  offers: {
    '@type': 'Offer',
    priceCurrency: 'AUD',
    availability: 'https://schema.org/InStock',
    priceValidUntil: '2025-12-31'
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://allseasonsliving.com.au/'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Roller Shutters',
      item: 'https://allseasonsliving.com.au/roller-shutters'
    }
  ]
};
---

