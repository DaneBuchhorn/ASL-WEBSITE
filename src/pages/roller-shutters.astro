<script>
  import { captureFormData, initializeSessionTracking } from '../utils/formTracking';

  // Initialize tracking
  initializeSessionTracking();

  const form = document.getElementById('rollerShuttersQuoteForm') as HTMLFormElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = document.getElementById('rsQuoteSubmitBtn') as HTMLButtonElement;

      // Get form values
      const name = (document.getElementById('rs-name') as HTMLInputElement)?.value.trim();
      const phone = (document.getElementById('rs-phone') as HTMLInputElement)?.value.trim();
      const email = (document.getElementById('rs-email') as HTMLInputElement)?.value.trim();
      const suburb = (document.getElementById('rs-suburb') as HTMLInputElement)?.value.trim();
      const message = (document.getElementById('rs-message') as HTMLTextAreaElement)?.value.trim();

      // Validate required fields
      if (!name || !phone || !suburb) {
        alert('Please fill in all required fields');
        return;
      }

      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.classList.add('loading');
      }

      try {
        const formData = new FormData(form);
        const leadData = {
          name: formData.get('name') as string,
          email: formData.get('email') as string,
          phone: formData.get('phone') as string,
          suburb: formData.get('suburb') as string,
          product: 'Roller Shutters',
          message: formData.get('message') as string || undefined,
        };

        const submission = captureFormData(leadData, 'rollerShuttersQuoteForm', 'roller-shutters-inline-form');

        const response = await fetch('/api/submit-lead', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(submission),
        });

        const result = await response.json();

        if (response.ok && result.success) {
          // Push event to GTM dataLayer with beacon transport
          if (typeof window.dataLayer !== 'undefined') {
            window.dataLayer.push({
              event: 'generate_lead',
              event_category: 'Form',
              event_label: 'roller-shutters-inline',
              value: 1,
              transport_type: 'beacon'
            });
          }

          window.location.href = '/thank-you';
        } else {
          throw new Error(result.message || 'Submission failed');
        }
      } catch (error) {
        console.error('Form error:', error);
        alert('There was an error submitting your form. Please try calling us directly at 0448 243 979.');

        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.classList.remove('loading');
        }
      }
    });
  }
</script>

