const pageDescription = 'Premium artificial lawn installation in Canberra. Synthetic grass designed for the Australian climate. Pet-friendly, low maintenance, and looks great all year. Free measure & quote.';

// Product Schema for SEO
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: 'Premium Artificial Lawn',
  description: pageDescription,
  brand: {
    '@type': 'Brand',
    name: 'All Seasons Living'
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.9',
    reviewCount: '50000',
    bestRating: '5'
  },
  offers: {
    '@type': 'Offer',
    priceCurrency: 'AUD',
    availability: 'https://schema.org/InStock',
    priceValidUntil: '2025-12-31'
  }
};

// Breadcrumb Schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://allseasonsliving.com.au/'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Artificial Lawn',
      item: 'https://allseasonsliving.com.au/artificial-lawn'
    }
  ]
};
