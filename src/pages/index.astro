<script>
  import { captureFormData, initializeSessionTracking } from '../utils/formTracking';

  // Initialize session tracking on page load
  initializeSessionTracking();

  // Form submission handler with comprehensive tracking
  const quoteForm = document.getElementById('mainQuoteForm');
  if (quoteForm) {
    quoteForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Disable submit button to prevent double submission
      const submitBtn = quoteForm.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitBtn?.textContent || '';
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'SUBMITTING...';
      }

      try {
        // Get form data
        const formData = new FormData(quoteForm);
        const leadData = {
          name: formData.get('name') as string,
          email: formData.get('email') as string,
          phone: formData.get('phone') as string,
          suburb: formData.get('suburb') as string,
          product: formData.get('product') as string,
          bestTime: formData.get('best-time') as string || undefined,
          message: formData.get('message') as string || undefined,
        };

        // Capture comprehensive tracking data
        const submission = captureFormData(leadData, 'mainQuoteForm', 'homepage-quote-form');

        console.log('ðŸ“Š Full Lead Submission Data:', submission);

        // Send to API endpoint
        const response = await fetch('/api/submit-lead', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(submission),
        });

        const result = await response.json();

        if (response.ok && result.success) {
          // Push event to GTM dataLayer with beacon transport
          if (typeof window.dataLayer !== 'undefined') {
            window.dataLayer.push({
              event: 'generate_lead',
              event_category: 'Form',
              event_label: 'mainQuoteForm',
              value: 1,
              transport_type: 'beacon'
            });
          }

          // Success - redirect to thank you page
          window.location.href = '/thank-you';
        } else {
          throw new Error(result.message || 'Submission failed');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        alert('There was an error submitting your form. Please try calling us directly at 0448 243 979.');

        // Re-enable submit button
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      }
    });
  }

  // Quote button handlers
  const plantationBtn = document.getElementById('plantationQuoteBtn');
  const blindsBtn = document.getElementById('blindsQuoteBtn');

