---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<Layout title="Home" description="Transform your home with premium artificial lawn and roller shutters. Get a free design and quote today.">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-background">
        <img
          src="/assets/images/general/Modern Home All Seasons Living.webp"
          alt="Modern Australian Home"
          loading="eager"
          fetchpriority="high"
        />
      </div>
      <div class="container">
        <div class="hero-content">
          <h1>Elevate Your Home<br/>Simplify Your Life</h1>
        </div>
      </div>
    </section>

    <!-- Product Icons Row -->
    <section class="product-icons-section">
      <div class="container">
        <div class="hero-products">
          <a href="/artificial-lawn" class="product-icon-card">
            <img src="/assets/icons/Artificial_Lawn_inline_image.svg" alt="Artificial Lawn" class="product-icon" />
            <span>Artificial Lawn</span>
          </a>
          <a href="/roller-shutters" class="product-icon-card">
            <img src="/assets/icons/roller-shutters.svg" alt="Roller Shutters" class="product-icon" />
            <span>Roller Shutters</span>
          </a>
          <a href="#" class="product-icon-card">
            <img src="/assets/icons/plantation-shutters.svg" alt="Plantation Shutters" class="product-icon" />
            <span>Plantation Shutters</span>
          </a>
          <a href="/outdoor-blinds" class="product-icon-card">
            <img src="/assets/icons/outdoor-blinds.svg" alt="Outdoor Blinds" class="product-icon" />
            <span>Outdoor Blinds</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Trust/Credibility Section -->
    <section class="trust-section">
      <div class="container">
        <div class="trust-header">
          <h2>Canberra's Trusted Home Improvement Specialists</h2>
          <p class="trust-services">Specialising in Outdoor Blinds • Roller Shutters • Plantation Shutters • Artificial Lawn</p>
          <p class="trust-description">With over 15 years of industry experience, we deliver premium home solutions designed and tested for Australian conditions. From durability to style, our products are crafted to elevate your home while simplifying everyday living—backed by expert installation and a 24-month workmanship guarantee.</p>
        </div>

        <div class="trust-badges">
          <div class="trust-badge">
            <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            <div>
              <strong>Locally Owned</strong>
            </div>
          </div>

          <div class="trust-badge">
            <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <div>
              <strong>Licensed & Insured</strong>
            </div>
          </div>

          <div class="trust-badge">
            <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <div>
              <strong>Premium Materials</strong>
            </div>
          </div>

          <div class="trust-badge">
            <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <div>
              <strong>15 Years Experience</strong>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- TrueScreen Outdoor Blinds Feature Section -->
    <section class="outdoor-blinds-section">
      <div class="blinds-content-wrapper">
        <div class="blinds-visual-content">
          <div class="blinds-hero-image">
            <img src="/assets/images/outdoor-blinds/Outdoor Motorised Blinds.webp" alt="Motorised Outdoor Blinds" loading="lazy" />
          </div>
        </div>
        <div class="blinds-text-content">
          <div class="container">
            <h2>TrueScreen<span class="trademark">®</span> Outdoor Blinds</h2>
            <p class="blinds-tagline">Australia's Premium Outdoor Blind System</p>

            <div class="blinds-features">
              <div class="blinds-feature">
                <svg class="blinds-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="5"/>
                  <line x1="12" y1="1" x2="12" y2="3"/>
                  <line x1="12" y1="21" x2="12" y2="23"/>
                  <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                  <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                  <line x1="1" y1="12" x2="3" y2="12"/>
                  <line x1="21" y1="12" x2="23" y2="12"/>
                  <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                  <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                </svg>
                <div>
                  <strong>UV Blockout</strong>
                  <p>Superior light control</p>
                </div>
              </div>
              <div class="blinds-feature">
                <img src="/assets/icons/wind-svgrepo-com.svg" alt="Wind Rated" class="blinds-icon" />
                <div>
                  <strong>Wind Rated</strong>
                  <p>Engineered for Australian conditions</p>
                </div>
              </div>
              <div class="blinds-feature">
                <img src="/assets/icons/smart-home-svgrepo-com.svg" alt="Smart Automation" class="blinds-icon" />
                <div>
                  <strong>Smart Automation</strong>
                  <p>Zigbee motor with app control</p>
                </div>
              </div>
              <div class="blinds-feature">
                <img src="/assets/icons/stack-svgrepo-com.svg" alt="Dual Channel Track" class="blinds-icon" />
                <div>
                  <strong>Dual Channel Track</strong>
                  <p>Smooth & reliable operation</p>
                </div>
              </div>
              <div class="blinds-feature">
                <img src="/assets/icons/sparkles-outline-svgrepo-com.svg" alt="Scratch Resistant Finish" class="blinds-icon" />
                <div>
                  <strong>Scratch Resistant Finish</strong>
                  <p>Long-lasting durability</p>
                </div>
              </div>
              <div class="blinds-feature">
                <img src="/assets/icons/kangaroo-illustration-3-svgrepo-com.svg" alt="Australian Made & Owned" class="blinds-icon" />
                <div>
                  <strong>Australian Made & Owned</strong>
                  <p>Supporting local manufacturing</p>
                </div>
              </div>
            </div>

            <a href="/outdoor-blinds" class="btn btn-primary btn-lg">DISCOVER MORE</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Section -->
    <section class="why-choose">
      <div class="container">
        <h2 class="section-title">Why Choose All Seasons Living?</h2>
        <div class="benefits-grid">
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Free On-Site Consultations & Quotes</span>
          </div>
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>100% Australian Owned & Operated</span>
          </div>
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Over 15 Years Industry Experience</span>
          </div>
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Quality Products with Warranties</span>
          </div>
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Licensed & Trained Installers</span>
          </div>
          <div class="benefit-item-check">
            <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span>Personalised Service from Start to Finish</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Roller Shutters Feature Section -->
    <section class="roller-shutters-section">
      <div class="shutters-content-wrapper">
        <div class="shutters-text-content">
          <div class="container">
            <h2>Roller Shutters</h2>
            <p class="shutters-subtitle">Canberra's Leading Roller Shutter Experts</p>

            <div class="benefits-list">
              <div class="benefit-item">
                <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="5"/>
                  <line x1="12" y1="1" x2="12" y2="3"/>
                  <line x1="12" y1="21" x2="12" y2="23"/>
                  <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                  <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                  <line x1="1" y1="12" x2="3" y2="12"/>
                  <line x1="21" y1="12" x2="23" y2="12"/>
                  <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                  <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                </svg>
                <span>Light Blockout</span>
              </div>
              <div class="benefit-item">
                <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0110 0v4"/>
                </svg>
                <span>Security</span>
              </div>
              <div class="benefit-item">
                <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>Privacy</span>
              </div>
              <div class="benefit-item">
                <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
                  <line x1="23" y1="9" x2="17" y2="15"/>
                  <line x1="17" y1="9" x2="23" y2="15"/>
                </svg>
                <span>Noise Reduction</span>
              </div>
            </div>

            <a href="/roller-shutters" class="btn btn-primary btn-lg">DISCOVER MORE</a>
          </div>
        </div>

        <div class="shutters-visual-content">
          <div class="shutters-image">
            <img src="/assets/images/roller-shutters/All Seasons Living -Roller Shutters.webp" alt="Roller Shutters Installation" loading="lazy" />
          </div>
        </div>
      </div>
    </section>

    <!-- Get Free Quote Form Section -->
    <section class="quote-section">
      <svg class="quote-blob quote-blob-left" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="rgba(255, 255, 255, 0.1)" d="M44.7,-76.4C58.8,-69.2,71.8,-59.1,79.6,-45.8C87.4,-32.6,90,-16.3,88.5,-0.9C87,14.6,81.4,29.2,73.1,42.2C64.8,55.2,53.8,66.6,40.3,73.8C26.8,81,10.8,84,-5.3,83.3C-21.4,82.6,-42.8,78.2,-58.4,68.2C-74,58.2,-83.8,42.6,-88.5,25.4C-93.2,8.2,-92.8,-10.6,-86.6,-26.8C-80.4,-43,-68.4,-56.6,-54.1,-64.2C-39.8,-71.8,-23.2,-73.4,-7.5,-75.9C8.2,-78.4,30.6,-83.6,44.7,-76.4Z" transform="translate(100 100)" />
      </svg>
      <svg class="quote-blob quote-blob-right" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="rgba(255, 255, 255, 0.1)" d="M39.5,-67.3C51.4,-60.1,61.5,-50.3,68.4,-38.5C75.3,-26.7,79,-13,79.8,1.1C80.6,15.2,78.5,30.4,71.4,43.2C64.3,56,52.2,66.4,38.6,72.7C25,79,9.9,81.2,-5.4,80.6C-20.7,80,-41.4,76.6,-56.8,67.8C-72.2,59,-82.3,44.8,-86.4,29C-90.5,13.2,-88.6,-4.2,-82.8,-19.4C-77,-34.6,-67.3,-47.6,-55.1,-54.7C-42.9,-61.8,-28.2,-63,-14.3,-64.7C-0.4,-66.4,12.7,-68.6,24.7,-67.3C36.7,-66,47.6,-61.2,39.5,-67.3Z" transform="translate(100 100)" />
      </svg>

      <div class="container">
        <h2 class="text-center">GET A FREE DESIGN AND QUOTE</h2>
        <p class="text-center subtitle">One of our design specialists will measure & design the perfect solution with you.</p>

        <form class="quote-form" id="mainQuoteForm">
          <div class="form-grid">
            <input type="text" id="name" name="name" placeholder="Name* (e.g. John Doe)" required />
            <input type="tel" id="phone" name="phone" placeholder="Phone* (e.g. 0412 345 678)" required />
            <input type="email" id="email" name="email" placeholder="Email* (e.g. john.doe@email.com)" required />
            <input type="text" id="suburb" name="suburb" placeholder="Suburb* (e.g. Belconnen)" required />
            <select id="product" name="product" required>
              <option value="">Select Product*</option>
              <option value="artificial-lawn">Artificial Lawn</option>
              <option value="roller-shutters">Roller Shutters</option>
              <option value="outdoor-blinds">Outdoor Blinds</option>
              <option value="plantation-shutters">Plantation Shutters</option>
            </select>
            <select id="best-time" name="best-time">
              <option value="">Best Time to Call</option>
              <option value="morning">Morning (8am-12pm)</option>
              <option value="afternoon">Afternoon (12pm-5pm)</option>
              <option value="evening">Evening (5pm-8pm)</option>
              <option value="anytime">Anytime</option>
            </select>
            <textarea id="message" name="message" rows="3" placeholder="Tell us about your project..."></textarea>
            <button type="submit" class="btn btn-primary">GET MY FREE QUOTE NOW</button>
          </div>
        </form>
      </div>
    </section>

    <!-- Artificial Lawn Feature Section -->
    <section class="lawn-section">
      <div class="lawn-content-wrapper">
        <div class="lawn-visual-content">
          <div class="lawn-image">
            <img src="/assets/images/artificial-lawn/Artificial-lawn-asl-media.webp" alt="Puppy on Artificial Lawn" loading="lazy" />
          </div>
        </div>
        <div class="lawn-text-content">
          <div class="container">
            <h2>Artificial Lawn</h2>
            <p class="lawn-tagline">Premium Artificial Grass Installation in Canberra</p>

            <div class="lawn-benefits">
              <div class="lawn-benefit">
                <svg class="lawn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                  <circle cx="9" cy="9" r="0.5" fill="currentColor"/>
                  <circle cx="15" cy="9" r="0.5" fill="currentColor"/>
                </svg>
                <span>No More Mowing</span>
              </div>
              <div class="lawn-benefit">
                <img src="/assets/icons/diamond-svgrepo-com.svg" alt="Year Round Beauty" class="lawn-icon" />
                <span>All-Weather Beauty</span>
              </div>
              <div class="lawn-benefit">
                <img src="/assets/icons/paw-svgrepo-com.svg" alt="Pet Friendly" class="lawn-icon" />
                <span>Pet & Kid Friendly</span>
              </div>
              <div class="lawn-benefit">
                <svg class="lawn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0z"/>
                </svg>
                <span>Water Saving</span>
              </div>
            </div>

            <a href="/artificial-lawn" class="btn btn-primary btn-lg">LEARN MORE</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Plantation Shutters Feature Section -->
    <section class="feature-section section-cream">
      <div class="container">
        <div class="feature-grid">
          <div class="feature-content">
            <h2>Plantation<br/>Shutters</h2>
            <button class="btn btn-primary btn-lg" id="plantationQuoteBtn">GET A QUOTE</button>
          </div>
          <div class="feature-image-single">
            <img src="/assets/images/general/Modern Home All Seasons Living.webp" alt="Plantation Shutters" loading="lazy" />
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>

<style>
  /* ============================================
     MOBILE-FIRST CSS ARCHITECTURE
     Base styles are for mobile (< 768px)
     ============================================ */

  /* Hero Section - Mobile First */
  .hero {
    position: relative;
    min-height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: visible;
    background: transparent;
    padding-bottom: 0;
    margin-bottom: 80px;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: -350px;
    background: linear-gradient(135deg, var(--cream) 0%, var(--light-sage) 50%, var(--cream) 100%);
    z-index: -1;
  }

  .hero-background {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-content {
    position: absolute;
    bottom: -60px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    width: 90%;
    max-width: 500px;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(1.75rem, 8vw, 2.5rem);
    margin-bottom: 0;
    color: var(--black);
    line-height: 1.2;
    font-weight: 700;
    background: #ffffffd9;
    padding: 1.25rem 1.5rem;
    border-radius: var(--radius-sm);
    backdrop-filter: blur(5px);
    display: block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  /* Product Icons Section - Mobile First */
  .product-icons-section {
    padding: 0 0 2rem 0;
    background: transparent;
    margin-top: 0;
    position: relative;
    z-index: 20;
  }

  .hero-products {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.875rem;
    max-width: 100%;
    margin: 0 auto;
  }

  .product-icon-card {
    background: var(--cream);
    padding: 1.25rem 1rem;
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
    text-align: center;
    border: 1px solid rgba(84, 101, 61, 0.1);
    min-height: 48px; /* Touch-friendly */
    text-decoration: none;
    color: inherit;
  }

  .product-icon-card:active {
    transform: scale(0.98);
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.12);
  }

  .product-icon-card:visited {
    color: inherit;
  }

  .product-icon {
    width: 56px;
    height: 40px;
    object-fit: contain;
    filter: brightness(0) saturate(100%) invert(29%) sepia(14%) saturate(1158%) hue-rotate(52deg) brightness(95%) contrast(89%);
  }

  .product-icon-card span {
    font-size: 0.8125rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--black);
  }

  .blob {
    position: absolute;
    width: 300px;
    height: 300px;
    opacity: 0.1;
    z-index: 1;
  }

  .blob-1 {
    top: -50px;
    left: -50px;
  }

  .blob-2 {
    bottom: -100px;
    right: -100px;
  }

  .blob-3 {
    top: -80px;
    right: -80px;
  }

  /* Trust/Credibility Section - Mobile First */
  .trust-section {
    padding: 2.5rem 0;
    background: #f5f1e7;
    position: relative;
    z-index: 10;
    border-top: 1px solid rgba(84, 101, 61, 0.1);
    border-bottom: 1px solid rgba(84, 101, 61, 0.1);
  }

  .trust-header {
    text-align: center;
    max-width: 100%;
    margin: 0 auto 2rem auto;
    padding: 0;
  }

  .trust-header h2 {
    font-size: clamp(1.25rem, 5vw, 1.75rem);
    color: var(--olive-green);
    margin: 0 0 0.75rem 0;
    font-weight: 700;
    line-height: 1.3;
    white-space: normal;
    text-align: center;
  }

  .trust-services {
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    color: var(--rust);
    margin: 0 0 0.875rem 0;
    line-height: 1.4;
    text-align: center;
  }

  .trust-description {
    font-size: 1rem;
    color: var(--black);
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
    opacity: 0.9;
    text-align: center;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.875rem;
    max-width: 100%;
    margin: 0 auto;
  }

  .trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    padding: 1.25rem 0.875rem;
    background: var(--cream);
    border-radius: var(--radius-md);
    transition: transform 0.2s ease;
    border: 2px solid transparent;
  }

  .trust-badge:active {
    transform: scale(0.98);
  }

  .trust-icon {
    width: 40px;
    height: 40px;
    color: var(--olive-green);
    margin-bottom: 0.25rem;
  }

  .trust-badge strong {
    display: block;
