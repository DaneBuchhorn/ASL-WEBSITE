---
import config from '../../config.json';

const { offerBanner } = config;
---

{offerBanner.enabled && (
  <div
    class="offer-banner"
    id="offerBanner"
    style={`background-color: ${offerBanner.backgroundColor}; color: ${offerBanner.textColor};`}
  >
    <div class="container">
      <div class="banner-content">
        <a href={offerBanner.link} class="offer-content">
          <span class="offer-text">{offerBanner.text}</span>
        </a>
        <button class="close-banner" id="closeBanner" aria-label="Close banner">âœ•</button>
      </div>
    </div>
  </div>
)}

<style>
  .offer-banner {
    padding: 1rem 0;
    text-align: center;
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.5px;
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: all var(--transition-base);
  }

  .banner-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    position: relative;
  }

  .offer-content {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  .offer-text {
    animation: pulse 2s ease-in-out infinite;
  }

  .offer-content:hover {
    opacity: 0.85;
    transform: scale(1.02);
  }

  .close-banner {
    position: absolute;
    right: 2rem;
    background: transparent;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    color: inherit;
    padding: 0;
    line-height: 1;
    opacity: 0.8;
  }

  .close-banner:hover {
    opacity: 1;
    transform: scale(1.2);
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.9;
    }
  }

  @media (max-width: 768px) {
    .offer-banner {
      font-size: 0.85rem;
      padding: 0.875rem 0;
    }

    .banner-content {
      gap: 1rem;
    }

    .close-banner {
      right: 1rem;
      font-size: 1.25rem;
    }

    .offer-text {
      padding: 0 2rem;
    }
  }
</style>

<script>
  const closeBanner = document.getElementById('closeBanner');
  const offerBanner = document.getElementById('offerBanner');

  if (closeBanner && offerBanner) {
    closeBanner.addEventListener('click', () => {
      offerBanner.style.display = 'none';
      // Store in sessionStorage so it only stays closed during this browsing session
      sessionStorage.setItem('offerBannerClosed', 'true');
    });
  }

  // Check if banner was previously closed in this session
  if (sessionStorage.getItem('offerBannerClosed') === 'true' && offerBanner) {
    offerBanner.style.display = 'none';
  }
</script>
