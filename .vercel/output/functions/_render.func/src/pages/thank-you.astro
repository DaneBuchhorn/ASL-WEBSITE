---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Thank You - All Seasons Living"
  description="Thank you for your enquiry. We'll be in touch soon to discuss your project."
>
  <Header />

  <main class="thank-you-page">
    <div class="container">
      <div class="thank-you-content">
        <div class="success-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>

        <h1>Thank You!</h1>
        <p class="lead-text">Your enquiry has been successfully submitted.</p>

        <div class="info-box">
          <p>We've received your request and one of our team members will be in touch with you shortly to discuss your project.</p>
          <p class="response-time">Our typical response time is within 1-2 business hours.</p>
        </div>

        <div class="next-steps">
          <h2>What Happens Next?</h2>
          <div class="steps-grid">
            <div class="step">
              <div class="step-number">1</div>
              <h3>Review</h3>
              <p>We'll review your enquiry and product requirements</p>
            </div>
            <div class="step">
              <div class="step-number">2</div>
              <h3>Contact</h3>
              <p>A specialist will call you at your preferred time</p>
            </div>
            <div class="step">
              <div class="step-number">3</div>
              <h3>Measure & Quote</h3>
              <p>We'll arrange a free measure and provide a detailed quote</p>
            </div>
          </div>
        </div>

        <div class="cta-buttons">
          <a href="/" class="btn-primary">Return to Home</a>
          <a href="tel:0448243979" class="btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Call Us Now
          </a>
        </div>

        <div class="contact-info">
          <p><strong>Need immediate assistance?</strong></p>
          <p>Call us on <a href="tel:0448243979">0448 243 979</a></p>
          <p>Email: <a href="mailto:info@allseasonsliving.com.au">info@allseasonsliving.com.au</a></p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .thank-you-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--cream) 0%, #ffffff 100%);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .thank-you-content {
    background: white;
    border-radius: var(--radius-lg);
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .success-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    color: var(--olive-green);
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--olive-green);
    margin-bottom: 1rem;
  }

  .lead-text {
    font-size: 1.25rem;
    color: var(--black);
    margin-bottom: 2rem;
  }

  .info-box {
    background: var(--light-sage);
    border-left: 4px solid var(--olive-green);
    padding: 1.5rem;
    margin: 2rem 0;
    text-align: left;
    border-radius: var(--radius-sm);
  }

  .info-box p {
    margin-bottom: 0.75rem;
    color: var(--black);
  }

  .info-box p:last-child {
    margin-bottom: 0;
  }

  .response-time {
    font-weight: 600;
    color: var(--olive-green);
  }

  .next-steps {
    margin: 3rem 0;
  }

  .next-steps h2 {
    font-size: 1.75rem;
    color: var(--olive-green);
    margin-bottom: 2rem;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 50px;
    height: 50px;
    background: var(--olive-green);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1rem;
  }

  .step h3 {
    font-size: 1.25rem;
    color: var(--olive-green);
    margin-bottom: 0.5rem;
  }

  .step p {
    color: var(--black);
    font-size: 0.95rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .btn-primary, .btn-secondary {
    padding: 0.875rem 2rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary {
    background: var(--olive-green);
    color: white;
  }

  .btn-primary:hover {
    background: #465331;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: white;
    color: var(--black);
    border: 2px solid var(--black);
  }

  .btn-secondary:hover {
    background: var(--black);
    color: white;
  }

  .contact-info {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--light-sage);
    color: var(--black);
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  .contact-info a {
    color: var(--olive-green);
    text-decoration: none;
    font-weight: 600;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .thank-you-content {
      padding: 2rem 1.5rem;
    }

    .steps-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary, .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  // Track thank you page view in Google Analytics
  if (typeof gtag !== 'undefined') {
    gtag('event', 'page_view', {
      page_title: 'Thank You',
      page_location: window.location.href,
      page_path: '/thank-you'
    });
  }
</script>
